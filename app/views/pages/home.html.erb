<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-8 mt-5">
            <% @restaurants.each do |restaurant| %>
            <div class="card">
                <div class="card-horizontal d-flex">
                    <div class="img-square-wrapper">
                    </div>
                    <div class="card-body ">
                        <h4 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant)  %></h4>
                    </div>
                </div>
                <div class="card-footer">
                    <p class="text-muted"><%= restaurant.description %></p>
                    <p class="text-muted"><%=restaurant.address %></p>
                    <p><%= link_to "Choose a new table", restaurant_tables_path(restaurant) %></p>
                    <p><%= link_to "Menu", restaurant_meals_path(restaurant) %></p>
                    <img src="<%= restaurant.photo %>" alt="resto">
                </div>
            </div>
            <%end%>
