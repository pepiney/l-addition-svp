<%= render 'shared/banner' %>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <% @restaurants.each do |restaurant| %>
                <div class="card font-size-home-pages">
                    <div class="card-footer" >
                      <%= link_to restaurant_path(restaurant) do  %>
                        <img src="<%= restaurant.photo %>" alt="resto" id="photo-resto">
                      <% end %>
                      <div class="card-descript">
                        <h4 class="card-title "><%= link_to restaurant.name, restaurant_path(restaurant), class:"deco"  %></h4>
                        <p class="des-gps"><em>"<%= restaurant.description%>"</p></em>
                        <p class="des-gps"> üç¥<%= restaurant.distance_to(@result.first.coordinates).to_f.round(1) %> km</p>
                        <div class="btn-reserv">
                          <div class="row">
                            <div class="col-4 col-lg-6">
                              <p><%= link_to "Menu", restaurant_meals_path(restaurant), class:"btn btn-dark" %></p>
                            </div>
                            <div class="col-8 col-lg-6">
                              <p><%= link_to "Choisissez votre table", restaurant_tables_path(restaurant), class:"btn btn-dark" %></p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
</div>

