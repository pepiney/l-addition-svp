<div class="container">
  <div class="card">
    <div class="card-footer">
      <img src="<%= @restaurant.photo %>" alt="resto" id="nav-img" >
      <div class="card-descript">
        <h4 class="card-title"><%= @restaurant.name%></h4>
          <p><%=@restaurant.address%></p>
          <p><em>"<%= @restaurant.description%>"</p></em>
        <div class="btn-reserv">
          <div class="row">
            <div class="col-4 col-lg-6">
              <p><%= link_to "Menu", restaurant_meals_path(@restaurant), class:"btn btn-dark" %></p>
            </div>
            <div class="col-8 col-lg-6">
              <p><%= link_to "Reservez votre table", restaurant_tables_path(@restaurant), class:"btn btn-dark" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="map"
    style="width: 100%; height: 200px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>
  <%= link_to "Back", root_path, class:"btn btn-secondary" %>
</div>

