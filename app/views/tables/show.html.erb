
<div class="container-fluide">
  <div class="text-center">
      <div class="row">
        <div class="col-12 col-lg-6">
              <div class="card">

                 <h1>Table N°<%= @table.table_number %></h1>

                 <%= @table.bill %>
                 Paid: <%= @table.paid? %>

                 <% @orders.each do |order| %>
                 <p><%= order.meal.meal_name %> -
                 <%= order.meal.price %>€</p>
                 <%end%>
                 <h2 class="border-top">total<p><%= @total %>€</p></h2>
                 <div class="container">
                  <%#link_to "Payez", order_path(@orders.first), class:"btn btn-secondary" %>
                  <%#link_to "Payez", root_path, notice:"Merci de votre confiance", class:"btn btn-secondary" %>
                  <%= link_to 'Payez', restaurant_table_path(@restaurant, @table), method: :patch, class:"btn btn-secondary" %>
                
                 </div>
              </div>
          </div>
      </div>
  </div>
</div>
