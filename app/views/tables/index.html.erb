<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-12 col-lg-6">
     <h1 class="text-center"><%= @restaurant.name %></h1>
      <% @tables.each do |table| %>
        <div class="card">
          <%if @restaurant.name == table.restaurant.name # && table.paid? == false (a mettre si on veut afficher uniquement les tables non payés) %>
            <em><h3 class="table-id">Table N° <%= table.table_number %></h3>
            <img src="https://conciergering.com/wp-content/uploads/2019/06/R%C3%A9server-un-restaurant.png" alt="">
            <%= link_to "  Réserver  ", table_reservations_path(table), method: :post, remote: true, class:"btn btn-light" %><em>
          <%else%>
            <h3>No table available</h3>
          <% end %>
        </div>
      <% end %>
       <%= link_to "Back", root_path, class:"btn btn-gradient"  %>
    </div>
  </div>
</div>
